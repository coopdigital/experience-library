
.el-c-hero {
    padding: 0 0 var(--spacing-32) var(--spacing-32);
    background: var(--color-grey-neutral-warm);
} 

@media (--mq-medium) {
    .el-c-hero { 
        padding: 0 0 var(--spacing-32) var(--spacing-64);
    } 
}


.el-c-hero__image {
    display: flex; 
    flex-direction: row-reverse;
}


.el-c-hero__inner {
    margin-top: var(--spacing-32); 
    margin-right: var(--spacing-32);
}

@media (--mq-medium) {
    .el-c-hero__inner {
        margin-top: var(--spacing-32); 
        margin-right: var(--spacing-64);
    }
}


.el-c-hero__content { 
    padding: var(--spacing-32) var(--spacing-32) var(--spacing-32) 0;
}


.el-c-hero__title {
    font-size: 3.5rem;
    line-height: 1.1;
}

@media (--mq-medium) {
    .el-c-hero__title {
        font-size: 4.5rem;
        line-height: 1.1;
    }
}


.el-c-hero__section {
    font-weight: 600;
    margin-bottom: 0; 
}


.el-c-hero__meta {
    font-size: 1rem;
    margin-top: -4px; 
    margin-bottom: var(--spacing-32); 
}

@media (--mq-medium) {
    .el-c-hero__meta {
    font-size: 1rem;
    margin-top: -4px; 
    margin-bottom: var(--spacing-32);
    }
}



.el-c-hero__centered {
    align-items: center;
}