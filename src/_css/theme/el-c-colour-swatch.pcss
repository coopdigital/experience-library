.el-c-colour-swatch {
    display: block;
    width: 60px;
    height: 60px;
    border-radius: 5px;
}

.el-c-colour-swatch--border {
    border: 1px solid var(--color-grey-mid);
}

.el-c-swatch-combo {
    display: block;
    position: relative;
    width: 84px;
    height: auto;
}

.el-c-swatch-combo .el-c-colour-swatch {
    position: absolute;
    z-index: 1;
    width: 42px;
    height: 42px;
    top: 12px;
    left: 12px;
}

.el-c-swatch-combo .el-c-colour-swatch.el-c-colour-swatch-top {
    z-index: 4;
    top: 0;
    left: 0;
}

.coop-u-navy-bg {
